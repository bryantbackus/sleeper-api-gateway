# Server Configuration
NODE_ENV=production
PORT=3000

# Security Keys (generate during setup)
MASTER_KEY=generate-this-during-setup
JWT_SECRET=generate-this-during-setup

# Sleeper Configuration
SLEEPER_BASE_URL=https://api.sleeper.app/v1
DEFAULT_USER_ID=your-sleeper-user-id
DEFAULT_USERNAME=your-username

# Database & Cache
DATABASE_PATH=./data/database.sqlite
CACHE_REFRESH_TIME=06:00
CACHE_TIMEZONE=America/New_York

# Logging
LOG_LEVEL=info

# Optional: Disable caching for testing
# DISABLE_CACHE=false
